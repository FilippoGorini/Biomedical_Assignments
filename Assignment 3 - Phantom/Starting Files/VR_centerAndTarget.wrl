DEF Viewpoint1 Viewpoint {
  # Ho avvicinato la camera (Z=5) per vedere gli oggetti piccoli
  # Mantenendo il FOV stretto (0.06) si ha una vista quasi ortografica (piatta)
  position 0 0 5
  fieldOfView 0.06
}

DEF target_down Transform {
  # Posizione iniziale nascosta
  translation 0 -10 0
  # SCALA RIMOSSA (default 1 1 1)
  children DEF colore_bersaglio_0001 Shape {
    appearance DEF cambiacolore_0001 Appearance {
      material DEF ber_0001 Material {
        shininess 0
        diffuseColor 0.4 1 0.2
        ambientIntensity 0.1
      }
    }
    geometry DEF ber__0001 Sphere {
      # Raggio 2cm (visibile e raggiungibile)
      radius 0.02
    }
  }
}

DEF cursor Transform {
  translation 0 0 0
  # SCALA RIMOSSA (default 1 1 1)
  children [
    Shape {
      appearance Appearance {
        material Material {
          diffuseColor 1 1 1
        }
      }
      geometry Sphere {
        # Raggio 1cm (pi√π piccolo del target)
        radius 0.01
      }
    }
    DEF Force Transform {
      translation 0 0.0125 0
      scale 0 0 0
      center 0 -0.0125 0
      children [
        Cylinder {
          radius 0.002
          height 0.025
        }
        DEF freccia Transform {
          translation 0 0.0125 0
          children Cone {
            height 0.005
            bottomRadius 0.003
          }
        }
      ]
    }
  ]
}